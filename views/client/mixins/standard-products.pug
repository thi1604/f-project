mixin list-products-standard(title, products)
  .container.my-3
        .row
            .col-12
                +box-head(title)
            if(products.length == 0)
                h2 Đơn hàng rỗng!
            else 
                for item in products
                    .row
                    .col-4.mb-3.mr-3.item-product 
                        a(
                            href=`/products/detail/${item.slug}`
                            style="text-decoration: none"
                        )
                            .product-item
                                .inner-image
                                    img(src=item.thumbnail, alt=item.title)
                                .inner-content
                                    h3.inner-title #{item.title}
                                    .inner-price-old #{item.price}$
                                    .inner-discount -#{item.discountPercentage}%
                                    .inner-price-new Giá: #{item.priceNew}$