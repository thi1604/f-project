extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container
    +box-head(pageTitle)
    form(
      action="/user/change-password?_method=PATCH"
      method="POST"
    )
      div(class="form-group")
        label(for="password-old") Nhập mật khẩu cũ
        input(
          type="password"
          class="form-control"
          id="password-old"
          name="passwordOld"
          required
        )
      div(class="form-group")
        label(for="password-new") Mật khẩu mới
        input(
          type="password"
          class="form-control"
          id="password-new"
          name="passwordNew"
          required
        )
      div(class="form-group")
        label(for="password-new-again") Nhập lại mật khẩu mới
        input(
          type="password"
          class="form-control"
          id="password-new-again"
          name="passwordNewAgain"
          required
        )
      div(class="form-group")
        button(
          type="submit"
          class="btn btn-primary btn-block"
        ) Đổi mật khẩu
  
    