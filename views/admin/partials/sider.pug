    ul(
      my-list-admin
    ) 
      li
        a(href=`/${prefix}/dashboard`) Tổng quan
      if(role.permissions.includes("products_view"))
        li
          a(href=`/${prefix}/product`) Quản lí sản phẩm
      if(role.permissions.includes("products-category_view"))
        li
          a(href=`/${prefix}/products-category`) Danh mục sản phẩm
